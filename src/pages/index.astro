      <h2><a href="#top">{SiteInfo.title}</a></h2>
      <ul id="links">
      <!-- TODO: Add expandable nav menu which starts closed-->
        {SiteInfo.sections.map((sectionName) => (
          <li><a href={"#" + sectionName} class="shadow-border-1">{sectionName[0]}</a></li>
        ))}
      </ul>
    </nav>
    <div id="welcome" >
      <h3 id="about" class="colorblock shadow-border-2">About me</h3>
      <img 
        class="shadow-border-2"
        src="../../profile.jpg" 
        alt="A professionally taken image of Logan Langdon"
      />
    </div>
    <h3 id="experience" class="colorblock shadow-border-2">Experience</h3>
    <div id="projects" >
      <ul role="list" class="link-card-grid">
      </ul>
    </div>
    <div id="projects">
    <h3 class="colorblock shadow-border-2"> Projects</h3>
		<ul role="list" class="link-card-grid">
      <!--TODO: add three sections corresponding to:--> <!--  - Web development--> <!--  - Game development-->
      <!--  - Systems programming-->
      <Card
        href={ExternLinks.github}
				title="CodeRoot: Personal Blog"
				body="Articles delving into the rabbit-holes of various software domains and arriving at universal patterns."
			/>
      <Card
        href={ExternLinks.github}
				title="Disco-lite: Browser-based "
				body="Articles delving into the rabbit-holes of various software domains and arriving at universal patterns."
