---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import Navbar from '../components/Navbar.astro';
import Expandable from '../components/Expandable.astro';
//import Terminal from '../components/Terminal.astro';

import { SiteInfo, ExternLinks, Skills } from '../constants.ts';
import { Icon } from 'astro-icon/components';
---

<Layout title={SiteInfo.title}>
	<main class="shadow-border-3">
    <Navbar title={SiteInfo.title} />
    <!--<Terminal />-->
      <!--<dialog open class="shadow-border-1">-->
      <!--  <form method="dialog">-->
      <!--    <button class="shadow-border-1"> x </button>-->
      <!--    <p>terminal</p>-->
      <!--  </form>-->
      <!--</dialog>-->
    <h2 class="divider">About</h2>
    <h2 class="inner-header">I am a Software Engineer specializing in: </h2>
    <ul id="skills">
      <li>
        Backend Web development
      </li>
      <li>
        Devops / Deployment
      </li>
      <li>
        Game Development
      </li>
    </ul>
    </div>
    <div id="technologies">
      <h2 class="divider">Skills</h2>
      <h2 class="inner-header">Frontend</h2>
      <ul class="hlist" role="list">
        <!-- Nodejs, Alpinejs, Tailwind, React, TS, Astro, Nextjs   -->
        {Skills.frontend.map((skillname) => (
          <li>
            <Icon name={skillname} class="icon" />
          </li>
        ))}
      </ul>
      <h2 class="inner-header">Backend</h2>
      <ul class="hlist" role="list">
        <!-- Golang, Apache Kafka, Postgresql, Sqlite, Rabbitmq, Docker, Django,    -->
        {Skills.backend.map((skillname) => (
          <li>
            <Icon name={skillname} class="icon" />
          </li>
        ))}
      </ul>
    </div>
    <div id="experience">
      <h2 class="divider">Experience</h2>
      <ul class="vlist" role="list">
        <Expandable
          title="Bricks4kids"
          description="Teaching"
        />
        <Expandable
          title="ACM Game Dev Team Lead"
          description="Seminars and Demos of Game development principles at CSUF"
        />
      </ul>
    </div>
    <div id="projects" >
      <h2 class="divider">Projects</h2>
      <ul role="list" class="link-card-grid">
        <!--TODO: add three sections corresponding to:--> <!--  - Web development--> <!--  - Game development-->
        <!--  - Systems programming-->
        <Card
          href={ExternLinks.github}
          title="CodeRoot: Technical Blog"
          body="Articles delving into the rabbit-holes of various software domains and determining patterns"
        />
        <Card
          href={ExternLinks.github}
          title="Disco-lite: Browser-based VTT"
          body="A browser-based virtual tabletop for managing a character in a Disco Elysium inspired table-top game"
        />
        <Card
          href={ExternLinks.github}
          title="Shadowsand Defense"
          body="Desktop game created in Godot for the 2024 Pirate Software Game Jam with Alchemy themed mechanics"
        />
        <Card
          href={ExternLinks.github}
          title="Disco-lite: Browser-based VTT"
          body="A browser-based virtual tabletop for managing a character in a Disco Elysium inspired table-top game"
        />
      </ul>
    </div>
    <h2 id="contact" class="divider">Contact</h2>
		<div id="contactcard">
			<Card href={ExternLinks.github} title="Contact" body="Contact me!" />
		</div>
				
    <script src="../changetheme.ts"></script>
	</main>
</Layout>

<style>
	main {
		margin-inline: auto;
		max-width: calc(100% - 3rem);
		width: auto;
		color: rgba(var(--text-color));
		font-size: 20px;
		line-height: 1.6;
    background-color: rgb(var(--primary));
  }
  ul {
		padding: 1rem;
    list-style: none;
  }
	.block {
		margin-bottom: 2rem;
    background: rgba(var(--accent));
		padding: 1rem 1.5rem 1rem 1.5rem;
  }
  .container {
    background: rgba(var(--accent));
    padding: 1rem;
  }
	.container > h2 {
    width: auto;
		margin: 0;
		font-size: 2.25rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	.container > p {
		margin-top: 0.5rem;
		margin-bottom: 0;
  }
  .divider {
    position:relative;
    background: rgba(var(--accent));
    border: 4px solid rgb(var(--outline));
    padding: 1rem 0 1rem 2rem;
    width: calc(100% + 8px);
		margin-left: -4px;
  }
	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 1rem;
  }
  .hlist {
    display: flex;
		padding: 1rem;
    flex-direction: row;
    justify-content: flex-start;
    gap: 2rem;
  }
  .vlist {
    display: flex;
    flex-direction: column;
    justify-content: space-evenly;
    gap: 1rem;
  }
  .icon {
    max-width: 100%;
    max-height: 100%;
    object-fit:contain;
    width: 60px;
    height: auto;
  }
  .inner-header {
    padding-left: 1rem;
		margin: 0;
  }
	#skills > li{
		padding-inline: 1rem;
	}
	#contactcard {
		margin: 1rem;
	}
</style>
