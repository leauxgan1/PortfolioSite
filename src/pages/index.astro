<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: rgba(var(--text-color));
		font-size: 20px;
		line-height: 1.6;
    background-color: rgb(var(--primary));
  }
  nav {
    display: flex;
    flex-direction:row;
    align-items:center;
    justify-content: space-between;
  }
  #links {
    display: flex;
    flex-direction:row;
    /*flex-wrap:wrap;*/
    justify-content: space-evenly;
    max-width: 250px;
  }
  #links > li > a {
    position: relative;
    padding: 0.5rem 0.7rem 0.5rem 0.7rem;
    margin-inline: 0.5rem;
    background: rgba(var(--accent-light));
  }
  a {
    text-decoration: none;
    color: inherit;
  }
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
  }
  ul {
    list-style: none;
  }
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.colorblock {
		margin-bottom: 2rem;
    background: rgba(var(--accent));
		padding: 1.5rem;
	}
	.link-card-grid {
		display: grid;
