---
interface Props {
	title: string;
}

const {title} = Astro.props;
import { ExternLinks } from "../constants.ts";
import { Icon } from 'astro-icon/components';
//import { Image } from 'astro:assets';
//import profile from '../images/profile.png';

const profileImg = "/images/profile.png";

---

<nav id="home" class="block shadow-border-2">
  <ul>
		<li class="profile">
			<a href="#top" class="container">
				<img
					src={profileImg}
					alt="Logan Langdon"
					class="shadow-border-1"
				>
			</a>
		</li>
		<li class="nameplate">
			<a href="#top" class="container">
				<strong>{title}</strong>
			</a>
		</li>
    <li>
      <a href={ExternLinks.github} class="shadow-border-1 container" aria-label="github link">
        <Icon name="github" class="icon" />
      </a>
    </li>
    <li>
      <a href={ExternLinks.mastodon} class="shadow-border-1 container" aria-label="mastodon link">
        <Icon name="mastodon" class="icon" />
      </a>
    </li>
    <li>
      <a href={ExternLinks.linkedin} class="shadow-border-1 container" aria-label="linkedin link">
        <Icon name="linkedin" class="icon" />
      </a>
    </li>
    <li>
      <button class="shadow-border-1 theme-toggle container">
        <Icon name="dark" class="icon" />
      </button>
    </li>
  </ul>
</nav>

<style>
  nav {
		overflow:hidden;
		margin: 1rem;
  }
	img {
		border-radius: 50%;
		max-width: 100%;
		max-height: 100%;
	}
  h1 {
    font-size: 30px;
  }
  ul {
		display: flex;
		flex-direction: row;
		align-items: center;
		justify-content: space-between;
    list-style: none;
		max-width: 95%;
		max-height: 100%;
  }
  li {
		margin: 0;
		width: 55px;
		height: 55px;
  }
  .container {
		display: flex;
		align-items: center;
		justify-content: flex-end;
		width: 100%;
		height: 100%;
    cursor: pointer;
    text-decoration: none;
    color: inherit;
  }
  .icon {
		width: 100%;
		height: 100%;
    background: rgb(var(--primary));
		padding: 0.5rem;
		box-sizing: border-box;
  }
	.block {
    background: rgba(var(--accent));
  }
  .profile {
		width: 100px;
		height: 100px;
		margin-left: 2rem;
		margin-right: 1.5rem;
  }
	.nameplate {
		font-size: 28px;
		width: 100px;
		height: 11px;
		margin-right: 2.5rem;
	}
</style>
